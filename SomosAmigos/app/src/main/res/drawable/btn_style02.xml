<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado normal (habilitado y no presionado) -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/orange01"/> <!-- Naranja suave -->
            <stroke android:color="@color/gray01" android:width="2dp"/> <!-- Borde gris suave -->
        </shape>
    </item>

    <!-- Estado presionado -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/orange02"/> <!-- Naranja mÃ¡s oscuro o intenso -->
        </shape>
    </item>

    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/gray02"/> <!-- Gris para el estado deshabilitado -->
            <stroke android:color="@color/gray03" android:width="2dp"/> <!-- Borde gris oscuro -->
        </shape>
    </item>

</selector>