<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado habilitado y no presionado -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/botones"/>
            <stroke android:color="@color/botonesBorde" android:width="2dp"/>
        </shape>
    </item>

    <!-- Estado habilitado y presionado -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="@color/botonesPresionado"/>
        </shape>
    </item>

    <!-- Estado deshabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/botonesDeshabilitado"/>
        </shape>
    </item>
</selector>

